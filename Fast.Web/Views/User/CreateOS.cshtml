@model Fast.Web.Models.UserModel
@using Fast.Web.Resources;

<link href="~/Content/dashforge/lib/fontawesome-free/css/all.min.css" rel="stylesheet">
<link href="~/Content/theme/css/jquery-ui-1.9.2.css" rel="stylesheet" />
<style>
	.fixedHeight {
		font-size: 14px;
		max-height: 300px;
		margin-bottom: 10px;
		overflow-x: hidden;
		overflow-y: auto;
	}

	.ui-helper-hidden-accessible {
		display: none;
	}
</style>

@using (Html.BeginForm("CreateOS", "User", FormMethod.Post, new { @class = "form-horizontal", @id = "AddOSModalForm" }))
{
	@Html.AntiForgeryToken()
	<div class="modal-header pd-y-20 pd-x-20 pd-sm-x-50">
		<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</a>
		<div class="media align-items-center">
			<span class="tx-color-03 d-none d-sm-block"><i class="fa fa-user-plus fa-3x"></i></span>
			<div class="media-body mg-sm-l-20">
				<h4 class="tx-18 tx-sm-20 mg-b-2">@UIResources.AddNewOSUser</h4>
				<p class="tx-13 tx-color-03 mg-b-0">@UIResources.FillAllRequiredFields</p>
			</div>
		</div><!-- media -->
	</div><!-- modal-header -->
	<div class="modal-body pd-sm-t-30 pd-sm-b-40 pd-sm-x-30">
		<div class="row row-sm mg-b-10">
			<div class="flex-1 row">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.EmployeeID</label>
				</div>
				<div class="col-8">
					@Html.TextBoxFor(x => x.EmployeeID, null, new { @class = "form-control", @id = "tbEmployeeIDOS", @required = "required", @type = "number" })
				</div>
			</div>
			<div class="flex-1 row">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.Supervisor</label>
				</div>
				<div class="col-8">
					@Html.TextBoxFor(x => x.SupervisorName, null, new { @class = "form-control", @id = "tbSupervisorName", @placeholder = "Type spv id or name...", @onkeypress = "return blockSpecialChar(event)" })
				</div>
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="flex-1 row">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.Username</label>
				</div>
				<div class="col-8">
					@Html.TextBoxFor(x => x.UserName, null, new { @class = "form-control", @id = "tbUsername", @required = "required" })
				</div>
			</div>
			<div class="flex-1 row">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.FullName</label>
				</div>
				<div class="col-8">
					@Html.TextBoxFor(x => x.FullName, null, new { @class = "form-control", @id = "tbFullname" })
				</div>
			</div>
		</div>
		<br />
		<div class="row row-sm mg-b-10">
			<div class="flex-1 row">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.Country</label>
				</div>
				<div class="col-8">
					@Html.DropDownListFor(x => x.CountryID, (IEnumerable<SelectListItem>)ViewBag.CountryList, new { @class = "form-control", @id = "ddlCountry" })
				</div>
			</div>
			<div class="flex-1 row">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.ProdCenter</label>
				</div>
				<div class="col-8">
					@Html.DropDownListFor(x => x.ProdCenterID, (IEnumerable<SelectListItem>)ViewBag.ProductionCenterList, new { @class = "form-control", @id = "ddlProdCenter" })
				</div>
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="flex-1 row">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.Department</label>
				</div>
				<div class="col-8">
					@Html.DropDownListFor(x => x.DepartmentID, (IEnumerable<SelectListItem>)ViewBag.DepartmentList, new { @class = "form-control", @id = "ddlDepartment" })
				</div>
			</div>
			<div class="flex-1 row">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.SubDepart</label>
				</div>
				<div class="col-8">
					@Html.DropDownListFor(x => x.SubDepartmentID, (IEnumerable<SelectListItem>)ViewBag.SubDepartmentList, new { @class = "form-control", @id = "ddlSubDepartment" })
				</div>
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="flex-1 row">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.JobTitle</label>
				</div>
				<div class="col-8">
					@Html.DropDownListFor(x => x.JobTitleID, (IEnumerable<SelectListItem>)ViewBag.JobTitleList, new { @class = "form-control", @id = "ddlJobTitle" })
				</div>
			</div>
			<div class="flex-1 row">
				<div class="col-4" id="lblNewTitle">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">New Job Title</label>
				</div>
				<div class="col-8" id="tbNewTitle">
					@Html.TextBoxFor(x => x.JobTitle, null, new { @class = "form-control", @id = "tbNewJobTitle" })
				</div>
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="flex-1 row" id="divGroupName">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.GroupType</label>
				</div>
				<div class="col-8">
					@Html.DropDownListFor(x => x.GroupType, (IEnumerable<SelectListItem>)ViewBag.GroupTypeList, new { @class = "form-control", @id = "ddlGroupType" })
				</div>
			</div>
			<div class="flex-1 row" id="divGroupName1">
				<div class="col-4">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.GroupName</label>
				</div>
				<div class="col-8">
					@Html.DropDownListFor(x => x.GroupName, (IEnumerable<SelectListItem>)ViewBag.GroupNameList, new { @class = "form-control", @id = "ddlGroupName" })
				</div>
			</div>
			<div class="flex-1 row" id="divEmpty1">
				<div class="col-5">
				</div>
				<div class="col-7">
				</div>
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="flex-1 row" style="display:none">
				<div class="col-12">
					@Html.TextBoxFor(x => x.SupervisorID, null, new { @class = "form-control", @id = "tbSupervisorID" })
				</div>
			</div>
			<div class="flex-1 row">
				<div class="col-12">
					<p id="error-message"></p>
				</div>
			</div>
		</div>
	</div><!-- modal-body -->
	<div class="modal-footer pd-x-20 pd-y-15">
		<button type="button" class="btn btn-white" data-dismiss="modal" onclick="OnCancel()">@UIResources.Cancel</button>
		<button type="button" class="btn btn-primary" onclick="ValidateLocation()">@UIResources.Save</button>
	</div>
}

<script src="~/Content/theme/js/jquery-1.10.0.min.js"></script>
<script src="~/Content/theme/js/jquery-ui-1.9.2.min.js"></script>
<script type="text/javascript">
	$(document).ready(function () {
		$('#tbSupervisorName').keyup(function () {
			if ($("#tbSupervisorName").val() == '') {
				$("#error-message").text("");
			}
		});

		$("#tbSupervisorName").autocomplete({
			delay: 750,
			source: function (request, response) {
				$.ajax({
					url: fastApp.BaseUrl + '/User/AutoCompleteSpv/',
					data: "{ 'prefix': '" + request.term + "'}",
					dataType: "json",
					type: "POST",
					contentType: "application/json; charset=utf-8",
					success: function (data) {
						if (data.length == 0) {
							$("#error-message").css('color', 'red');
							$("#error-message").text("Data does not exist in Employee List");
						} else {
							$("#error-message").text("");
							response($.map(data, function (item) {
								return $.trim(item.EmployeeID) + " - " + item.FullName;
							}))
						}
					},
					error: function (response) {
						alert(response.responseText);
					},
					failure: function (response) {
						alert(response.responseText);
					}
				});
			},
			select: function (e, i) {
				var res = i.item.label.split(" - ");
				if (res[0]) {
					$("#tbSupervisorID").val(res[0]);
				}
			},
			minLength: 1
		});

		$("#tbSupervisorName").autocomplete("widget").addClass("fixedHeight");

		$('#divEmpty1').hide();
		$('#ddlGroupType').change(function () {
			if ($(this).val() == "NS") {
				$('#divGroupName1').hide();
				$('#divEmpty1').show();
			} else {
				$('#divGroupName1').show();
				$('#divEmpty1').hide();
			}
		})

		$('#ddlCountry').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/User/GetProductionCenterByCountryID",
				data: { id: $('#ddlCountry').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					var ddlTemp = "<select id='ddlProdCenter'>";
					for (var i = 0; i < data.length; i++) {
						ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
					}
					ddlTemp = ddlTemp + '</select>';
					$('#ddlProdCenter').html(ddlTemp);
					$('#ddlDepartment').html("<select id='ddlDepartment'><option value='0'>- Please Select Prod. Center First -</option></select>");
					$('#ddlSubDepartment').html("<select id='ddlSubDepartment'><option value='0'>- Please Select Department First -</option></select>");
				}
			});
		});

		$('#ddlProdCenter').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/User/GetDepartmentByProdCenterID",
				data: { id: $('#ddlProdCenter').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					var ddlTemp = "<select id='ddlDepartment'>";
					for (var i = 0; i < data.length; i++) {
						ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
					}
					ddlTemp = ddlTemp + '</select>';
					$('#ddlDepartment').html(ddlTemp);
					$('#ddlSubDepartment').html("<select id='ddlSubDepartment'><option value='0'>- Please Select Department First -</option></select>");
				}
			});
		});

		$('#ddlDepartment').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/User/GetSubDepartmentByDepartmentID",
				data: { id: $('#ddlDepartment').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					var ddlTemp = "<select id='ddlSubDepartment'>";
					for (var i = 0; i < data.length; i++) {
						ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
					}
					ddlTemp = ddlTemp + '</select>';
					$('#ddlSubDepartment').html(ddlTemp);
				}
			});
		});

		$('#ddlJobTitle').change(function () {
			$("#error-message").text("");

			if ($('#ddlJobTitle').val() == "0") {
				$('#lblNewTitle').show();
				$('#tbNewTitle').show();
			} else {
				$('#lblNewTitle').hide();
				$('#tbNewTitle').hide();
			}
		});
	});

	function OnCancel() {
		window.location.href = fastApp.BaseUrl + '/User/Index';
	};

	function ValidateLocation() {
		if ($('#ddlProdCenter').is(":visible") && $('#ddlProdCenter').val() == "0") {
			$("#error-message").css('color', 'red');
			$("#error-message").text("No production center is selected");
			return (false);
		}

		if ($('#ddlJobTitle').is(":visible") && $('#ddlJobTitle').val() == "0" && $('#tbNewJobTitle').val() == '') {
			$("#error-message").css('color', 'red');
			$("#error-message").text("No Job Title is selected or New Job Title filled");
			return (false);
		}

		if ($('#tbEmployeeIDOS').val() == '') {
			$("#error-message").css('color', 'red');
			$("#error-message").text("Please input employee ID first");
			return (false);
		}

		document.getElementById('AddOSModalForm').submit();
		return (true);
	}
</script>