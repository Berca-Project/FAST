            </div>*@
        </div>
        <div class="row">
            <div class="col-12 mg-b-20">
                <div class="card collect-component" id="DelegationSecondary">
                    <div class="card-header bg-primary tx-white tx-center font-weight-bold">Delegation Secondary</div>
                    <div class="card-body d-flex">
                        <div class="col-5">
                            <div class="form-group row">
                                <label class="col-4 col-form-label">Old Supervisor</label>
                                <div class="col-8">
                                    <select class="form-control select2 mandatory" name="OldTeamLeader">

                                        @if (ViewBag.isSuperadmin)
                                        {
                                            foreach (Fast.Web.Models.EmployeeModel employee in ViewBag.LeadersLPHSPNotSubmited)
                                            {

                                                <option value="@(employee.EmployeeID)">[@(employee.EmployeeID)] @employee.FullName</option>
                                            }
                                        }
                                        else if (ViewBag.isSupervisor)
                                        {
                                            <option value="@(ViewBag.EmpIDMe)">[@(ViewBag.EmpIDMe)] @ViewBag.EmpNameMe</option>
                                        }

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-group row">
                                <label class="col-4 col-form-label">New Supervisor</label>
                                <div class="col-8">
                                    <select class="form-control select2 mandatory" name="TeamLeader">
                                        @foreach (Fast.Web.Models.EmployeeModel employee in ViewBag.Leaders)
                                        {
                                           
