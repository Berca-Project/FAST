            </div> 
        </div><!-- row -->
    </div><!-- container -->
</div><!-- content -->

@section Scripts{

    @****** ***** ***** ***** ***** Copy ***** ***** ***** ***** ******@
    <script src="~/Content/dashforge/lib/cleave.js/cleave.min.js"></script>
    <script src="~/Content/dashforge/lib/select2/js/select2.min.js"></script>
    <script src="~/Content/dashforge/lib/moment/moment.js"></script>


        <script src="~/Content/dashforge/lib/datatables.net/js/jquery.dataTables.min.js"></script>
        <script src="~/Content/dashforge/lib/datatables.net-dt/js/dataTables.dataTables.min.js"></script>
        <script src="~/Content/dashforge/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
        <script src="~/Content/dashforge/lib/datatables.net-responsive-dt/js/responsive.dataTables.min.js"></script>

        <script>
           
             $('.select2').each(function (i, e) {
                const param = {
                    allowClear: true,
                    placeholder: 'Choose one',
                    searchInputPlaceholder: 'Search options'
                };
                $(e).select2(param);
             });
            
            $("#delegateSecondary").on("click", function () {
                if (confirm("Are you sure?")) {
                    $('#loading_overlay').removeClass('d-none');

                    var oldSPV = $("[name=OldTeamLeader]").val();
                    if (oldSPV == "") {
                        showError("Field can't be empty");
                        return;
                    }
                    var newSPV = $("[name=TeamLeader]").val();
                    if (newSPV == "") {
                        showError("Field can't be empty");
                        return;
                    }
                    $.ajax({
                        type: "post",
                        url: fastApp.BaseUrl + "/Delegation/DelegateLPHSP",
                        data: {
                            OldSPV: oldSPV,
                            NewSPV: newSPV
                        },
                        datatype: "json",
                        traditional: true,
                        success: function (result) {
                            console.log(result);
                            if (result.Status == "True") {
                                var notice = new PNotify({
                                    title: "@UIResources.UpdateSucceed",
                                    text: "Delegation Success",
                                    width: "400px",
                                    type: 'success',
                                    addclass: 'stack-bottomright',
                                    delay: 2000
                                });

                                notice.get().click(function () {
                                    notice.remove();
                                });
                            } else {
                                var notice = new PNotify({
                                    title: "@UIResources.ErrorMessage",
                                    text: "Delegation Failed",
                                    width: "400px",
                                    type: 'error',
                                    addclass: 'stack-bottomright',
                                    delay: 2000
                                });

                                notice.get().click(function () {
                                    notice.remove();
                                });
                            }
                        },
                        complete: function () {
                            $('#loading_overlay').addClass('d-none');
                        },
                    });
                }
            });
            $("#delegatePrimary").on("click", function () {
                if (confirm("Are you sure?")) {
                    $('#loading_overlay').removeClass('d-none');

                    var oldSPV = $("[name=PPOldTeamLeader]").val();
                    if (oldSPV == "") {
                        showError("Field can't be empty");
                        return;
                    }
                    var newSPV = $("[name=PPTeamLeader]").val();
                    if (newSPV == "") {
                        showError("Field can't be empty");
                        return;
                    }
                    $.ajax({
                        type: "post",
                        url: fastApp.BaseUrl + "/Delegation/DelegateLPHPP",
                        data: {
                            OldSPV: oldSPV,
                            NewSPV: newSPV
                        },
                        datatype: "json",
                        traditional: true,
                        success: function (result) {
                            console.log(result);
                            if (result.Status == "True") {
                                var notice = new PNotify({
                                    title: "@UIResources.UpdateSucceed",
                                    text: "Delegation Success",
                                    width: "400px",
                                    type: 'success',
                                    addclass: 'stack-bottomright',
                                    delay: 2000
                                });

                                notice.get().click(function () {
                                    notice.remove();
                                });
                            } else {
                                var notice = new PNotify({
                                    title: "@UIResources.ErrorMessage",
                                    text: "Delegation Failed",
                                    width: "400px",
                                    type: 'error',
                                    addclass: 'stack-bottomright',
                                    delay: 2000
                                });

                                notice.get().click(function () {
                                    notice.remove();
                                });
                            }
                        },
                        complete: function () {
                            $('#loading_overlay').addClass('d-none');
                        },
                    });
                }
            });
    </script>
