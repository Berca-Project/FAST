                                <div class="col-8">
                                    <select class="form-control select2 mandatory" name="PPTeamLeader">
                                        @foreach (Fast.Web.Models.EmployeeModel employee in ViewBag.LeadersPP)
                                        {
                                           
                                            <option value="@(employee.EmployeeID)">[@(employee.EmployeeID)] @employee.FullName</option>
                                        }
                                    </select>
                                </div>
                            </div>
