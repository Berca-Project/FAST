@model Fast.Web.Models.Report.InputOVModel
@using Fast.Web.Resources;
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Create", "ReportInputOV", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="content content-fixed lph-form">
        <div class="container-fluid pd-x-0 pd-lg-x-10 pd-xl-x-0">
            <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                            <li class="breadcrumb-item"><a href="#">Report</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Input Data OV</li>
                        </ol>
                    </nav>
                    <h4 class="mg-b-0 tx-spacing--1">Input Data OV</h4>
                </div>
            </div>
                <div class="row">
                    <div class="col-12 mg-b-20">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label class="col-2 col-form-label mg-l-10">Waste Category</label>
                                    <div class="col-2" style="margin-left:-15px;">
                                        @Html.DropDownListFor(x => x.WasteCategory, (IEnumerable<SelectListItem>)ViewBag.WasteCategoryList, new { @class = "form-control", @id = "ddlWaste" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-2 col-form-label mg-l-10">Week</label>
                                    <div class="col-2" style="margin-left:-15px;">
                                        @Html.TextBoxFor(x => x.Week, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-2 col-form-label mg-l-10">OV</label>
                                    <div class="col-2" style="margin-left:-15px;">
                                        @Html.TextBoxFor(x => x.OV, new { @class = "form-control" })
                                    </div>
                                </div>

                                <br />
                                <div class="modal-footer pd-x-20 pd-y-15">
                                    <button type="button" class="btn btn-white">@UIResources.Cancel</button>
                                    <button type="submit" class="btn btn-primary">@UIResources.Save</button>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- row -->
        </div><!-- container -->
   
}




@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>

}



