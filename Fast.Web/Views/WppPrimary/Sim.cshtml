					{ "data": "Saturday", "name": "Saturday", "autoWidth": true },
					{ "data": "Sunday", "name": "Sunday", "autoWidth": true },
					{ "data": "Total", "name": "Total", "autoWidth": true }
				]
			});
        });

        $(document).ready(function () {

            $('.hasDatepicker').datepicker({
				format: 'd-M-yy',
