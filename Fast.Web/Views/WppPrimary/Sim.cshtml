				"processing": true,
				"serverSide": true,
				"filter": true,
				"orderMulti": false,
				"destroy": true,
				"pageLength": 50,
				"ajax": {
					"url": fastApp.BaseUrl + "/WppPrimary/GetAllSimulationWithParam",
					"data": { year: $('#ddlYear').val(), week: $('#ddlWeek').val(), locID: locationId, locType: locationType },
					"type": "POST",
					"datatype": "json"
				},

				"columnDefs":
					[{
