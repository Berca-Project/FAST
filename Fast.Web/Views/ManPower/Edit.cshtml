@model Fast.Web.Models.ManPowerModel
@using Fast.Web.Resources;

@using (Html.BeginForm("Edit", "ManPower", FormMethod.Post, new { @class = "form-horizontal", @id = "ModalForm" }))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(x => x.ID, new { @Id = "ID" })
	@Html.HiddenFor(x => x.RoleName, new { @Id = "RoleName" })
	<div class="modal-header pd-y-20 pd-x-20 pd-sm-x-50">
		<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</a>
		<div class="media align-items-center">
			<span class="tx-color-03 d-none d-sm-block"><i class="fa fa-edit" style="font-size:48px;"></i></span>
			<div class="media-body mg-sm-l-20">
				<h4 class="tx-18 tx-sm-20 mg-b-2">@UIResources.EditManPower</h4>
				<p class="tx-13 tx-color-03 mg-b-0">@UIResources.FillAllRequiredFields</p>
			</div>
		</div><!-- media -->
	</div><!-- modal-header -->
	<div class="modal-body pd-sm-t-20 pd-sm-b-20 pd-sm-x-30">
		<div class="row row-sm mg-b-10">
			<div class="col-4" style="visibility: hidden;">
				<label class="col-form-label mg-b-5 tx-color-03">@UIResources.RoleName</label>
			</div>
			<div class="col-8" style="visibility: hidden;">
				@Html.DropDownListFor(x => x.RoleName, (IEnumerable<SelectListItem>)ViewBag.RoleName, new { @class = "form-control", @id = "ddlRoleName", @disabled = "disabled" })
			</div>
			<div class="col-4">
				<label class="col-form-label mg-b-5 tx-color-03">@UIResources.Value</label>
			</div>
			<div class="col-8">
				@Html.TextBoxFor(x => x.Value, null, new { @class = "form-control", @id = "tbValue" })
			</div>
			<div class="col-4">
				<label class="col-form-label mg-b-5 tx-color-03">@UIResources.Country</label>
			</div>
			<div class="col-8">
				@Html.DropDownListFor(x => x.CountryID, (IEnumerable<SelectListItem>)ViewBag.CountryList, new { @class = "form-control", @id = "ddlCountry" })
			</div>
			<div class="col-4">
				<label class="col-form-label mg-b-5 tx-color-03">@UIResources.ProdCenter</label>
			</div>
			<div class="col-8">
				@Html.DropDownListFor(x => x.ProdCenterID, (IEnumerable<SelectListItem>)ViewBag.ProductionCenterList, new { @class = "form-control", @id = "ddlProdCenter" })
			</div>
			<div class="col-4">
				<label class="col-form-label mg-b-5 tx-color-03">@UIResources.Department</label>
			</div>
			<div class="col-8">
				@Html.DropDownListFor(x => x.LocationID, (IEnumerable<SelectListItem>)ViewBag.DepartmentList, new { @class = "form-control", @id = "ddlDepartment" })
			</div>
		</div>
	</div><!-- modal-body -->
	<div class="modal-footer pd-x-20 pd-y-15">
		<button type="button" class="btn btn-white" data-dismiss="modal">@UIResources.Cancel</button>
		<button type="submit" class="btn btn-primary">@UIResources.Save</button>
	</div>
}

<script type="text/javascript">
	$(document).ready(function () {
		$('#ddlCountry').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/ManPower/GetProductionCenterByCountryID",
				data: { id: $('#ddlCountry').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					var ddlTemp = "<select id='ddlProdCenter'>";
					for (var i = 0; i < data.length; i++) {
						ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
					}
					ddlTemp = ddlTemp + '</select>';
					$('#ddlProdCenter').html(ddlTemp);
					$('#ddlDepartment').html("<select id='ddlDepartment'><option value='0'>- Please Select -</option></select>");
					$('#ddlSubDepartment').html("<select id='ddlSubDepartment'><option value='0'>- Please Select -</option></select>");
				}
			});
		});

		$('#ddlProdCenter').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/ManPower/GetDepartmentByProdCenterID",
				data: { id: $('#ddlProdCenter').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					var ddlTemp = "<select id='ddlDepartment'>";
					var ddlMT = "<select id='ddlMachineType'>";
					var isMT = false;
					for (var i = 0; i < data.length; i++) {
						if (data[i].Value.indexOf("#") >= 0) {
							isMT = true;
							ddlMT = ddlMT + '<option value=' + data[i].Value.replace("#", "") + '>' + data[i].Text + '</option>';
						} else {
							ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
						}
					}

					if (isMT) {
						ddlMT = ddlMT + '</select>';
						$('#ddlMachineType').html(ddlMT);
					} else {
						$('#ddlMachineType').html("<select id='ddlMachineType'><option value='0'>- Please Select -</option></select>");
					}

					ddlTemp = ddlTemp + '</select>';
					$('#ddlDepartment').html(ddlTemp);
					$('#ddlSubDepartment').html("<select id='ddlSubDepartment1'><option value='0'>- Please Select -</option></select>");
				}
			});
		});

		$('#ddlDepartment').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/ManPower/GetSubDepartmentByDepartmentID",
				data: { id: $('#ddlDepartment').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					var ddlTemp = "<select id='ddlSubDepartment'>";
					var ddlMT = "<select id='ddlMachineType'>";
					var isMT = false;
					for (var i = 0; i < data.length; i++) {
						if (data[i].Value.indexOf("#") >= 0) {
							isMT = true;
							ddlMT = ddlMT + '<option value=' + data[i].Value.replace("#", "") + '>' + data[i].Text + '</option>';
						} else {
							ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
						}
					}

					if (isMT) {
						ddlMT = ddlMT + '</select>';
						$('#ddlMachineType').html(ddlMT);
					} else {
						$('#ddlMachineType').html("<select id='ddlMachineType'><option value='0'>- Please Select -</option></select>");
					}

					ddlTemp = ddlTemp + '</select>';
					$('#ddlSubDepartment').html(ddlTemp);
				}
			});
		});

		$('#ddlSubDepartment').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/ManPower/GetMachineTypeBySubDepartmentID",
				data: { id: $('#ddlSubDepartment').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					if (data.length == 0) {
						$('#ddlMachineType').html("<select id='ddlMachineType'><option value='0'>- Please Select -</option></select>");
					} else {
						var ddlMT = "<select id='ddlMachineType'>";
						for (var i = 0; i < data.length; i++) {
							ddlMT = ddlMT + '<option value=' + data[i].Value.replace("#", "") + '>' + data[i].Text + '</option>';
						}

						ddlMT = ddlMT + '</select>';
						$('#ddlMachineType').html(ddlMT);
					}
				}
			});
		});
	});
</script>