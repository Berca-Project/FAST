@model Fast.Web.Models.MppModel
@using Fast.Web.Resources;

@section CSS_lib{
	<!-- Specific Page Vendor CSS -->
	<link href="~/Content/dashforge/lib/typicons.font/typicons.css" rel="stylesheet">
	<link href="~/Content/dashforge/lib/prismjs/themes/prism-vs.css" rel="stylesheet">
	<link href="~/Content/dashforge/lib/datatables.net-dt/css/jquery.dataTables.min.css" rel="stylesheet">
	<link href="~/Content/dashforge/lib/datatables.net-responsive-dt/css/responsive.dataTables.min.css" rel="stylesheet">
}

@section Styles{
	<style>
		.dataTables_scrollBody thead tr {
			visibility: collapse
		}

		.button1 {
			background-color: #ffff99;
		}
		/* Green */
		.button2 {
			background-color: #ff9900;
		}
		/* Blue */
		.button3 {
			background-color: #33cc33;
		}
		/* Red */
		.button4 {
			background-color: #cc3300;
		}
		/* Gray */
		.button5 {
			background-color: #00ccff;
		}
		/* Black */
		.button6 {
			background-color: #9900cc;
		}
		/* Black */
	</style>
}

<div class="content content-fixed bd-b">
	<div class="container-fluid pd-x-0 pd-lg-x-10 pd-xl-x-0">
		<div class="d-sm-flex align-items-center justify-content-between">
			<div>
				<h4 class="mg-b-5">MPP Status List</h4>
				<p class="mg-b-0 tx-color-03">@UIResources.MppDataManagement</p>
			</div>
			<div class="mg-t-20 mg-sm-t-0">
				<div class="row">
					<button class="btn btn-primary btn-sm pd-x-15 btn-uppercase dtAddButton" onclick="GenerateExcel()">
						<i data-feather="download" class="mg-r-5"></i> Export Raw Data
					</button>
					<button class="btn btn-primary btn-sm pd-x-15 btn-uppercase dtAddButton" onclick="location.href='@Url.Action("Index", "MPP")'">
						<i data-feather="arrow-left-circle" class="mg-r-5"></i> @UIResources.Back
					</button>
				</div>
			</div>

		</div><!-- End content header -->
		<br />
		<div data-label="Filter" class="df-example demo-table dtMarginTop">
			<div class="row">
				<div class="col-sm-1">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.Country</label>
				</div>
				<div class="col-sm-2">
					@Html.DropDownListFor(x => x.CountryID, (IEnumerable<SelectListItem>)ViewBag.CountryList, new { @class = "form-control", @id = "ddlCountry1" })
				</div>
				<div class="col-sm-1">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.ProdCenter</label>
				</div>
				<div class="col-sm-2">
					@Html.DropDownListFor(x => x.ProdCenterID, (IEnumerable<SelectListItem>)ViewBag.ProductionCenterList, new { @class = "form-control", @id = "ddlProdCenter1" })
				</div>
				<div class="col-sm-1">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.Department</label>
				</div>
				<div class="col-sm-2">
					@Html.DropDownListFor(x => x.DepartmentID, (IEnumerable<SelectListItem>)ViewBag.DepartmentList, new { @class = "form-control", @id = "ddlDepartment1" })
				</div>
				<div class="col-sm-1">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.SubDepart</label>
				</div>
				<div class="col-sm-2">
					@Html.DropDownListFor(x => x.LocationID, (IEnumerable<SelectListItem>)ViewBag.SubDepartmentList, new { @class = "form-control", @id = "ddlSubDepartment1" })
				</div>
			</div><br />
			<div class="row">
				<div class="col-sm-1">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.StartDate</label>
				</div>
				<div class="col-md-2"><input class="form-control hasDatepicker" id="flDate" type="text" placeholder="dd-MMM-yy" /></div>
				<div class="col-sm-1">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">@UIResources.EndDate</label>
				</div>
				<div class="col-md-2"><input class="form-control hasDatepicker" id="endDate" type="text" placeholder="dd-MMM-yy" /></div>
				<div class="col-sm-1">
					<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-t-10 tx-color-03">Group & Shift</label>
				</div>
				<div class="col-sm-1">
					@Html.DropDownListFor(x => x.GroupTypeID, (IEnumerable<SelectListItem>)ViewBag.GroupTypeList, new { @class = "form-control", @id = "ddlGroupType" })
				</div>
				<div class="col-sm-1">
					@Html.DropDownListFor(x => x.Shift, (IEnumerable<SelectListItem>)ViewBag.ShiftList, new { @class = "form-control", @id = "ddlShift" })
				</div>
				<div class="col-sm-1">
				</div>
				<div class="col-sm-2">
					<button id="btnSearch" class="btn btn-sm pd-x-15 btn-primary btn-uppercase btn-block">Search</button>
				</div>
			</div>
		</div>
		<div class="modal fade" id="modalEditMpp" tabindex="-1" role="dialog" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document" style="max-width:500px;">
				<div class="modal-content" id="OpenDialog">
				</div><!-- modal-content -->
			</div><!-- modal-dialog -->
		</div><!-- modal -->

		<div class="modal fade" id="modalAddMpp" tabindex="-1" role="dialog" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document" style="max-width:500px;">
				<div class="modal-content" id="AddDialog">
				</div><!-- modal-content -->
			</div><!-- modal-dialog -->
		</div><!-- modal -->

		<div data-label="MPP Data" class="df-example demo-table dtMarginTop" id="dataArea">
			<table class="table table-bordered table-striped mb-none border-bottom-0 table-fast" id="mppTable">
				<thead>
					<tr>
						<th>@UIResources.ID</th>
						<th>@UIResources.Date</th>
						<th>@UIResources.Shift</th>
						<th>@UIResources.Location</th>
						<th>@UIResources.EmpID</th>
						<th>@UIResources.Name</th>
						<th>@UIResources.Role</th>
						<th>@UIResources.Status</th>
						<th style="text-align:center; width:10%;">@UIResources.Machine</th>
						<th>@UIResources.Action</th>
					</tr>
				</thead>
			</table>
			<div class="row" style="padding-top:20px">
				<div class="col-sm-3">
					<button class="btn button1 btn-sm pd-x-15 btn-uppercase btn-block" id="idAvailable">Available</button>
				</div>
				<div class="col-sm-3">
					<button class="btn button2 btn-sm pd-x-15 btn-uppercase btn-block" id="idHalfAssigned">Half-Assigned</button>
				</div>
				<div class="col-sm-3">
					<button class="btn button3 btn-sm pd-x-15 btn-uppercase btn-block" id="idFullyAssigned">Fully-Assigned</button>
				</div>
				<div class="col-sm-3">
					<button class="btn button4 btn-sm pd-x-15 btn-uppercase btn-block" id="idOverload">Overload</button>
				</div>
				@*<div class="col-sm-2">
						<button class="btn button5 btn-sm pd-x-15 btn-uppercase btn-block">Unlisted in Group</button>
					</div>
					<div class="col-sm-2">
						<button class="btn button6 btn-sm pd-x-15 btn-uppercase btn-block">Unallocated Machine</button>
					</div>*@
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<!-- Specific Page Vendor -->
	<script src="~/Content/dashforge/lib/prismjs/prism.js"></script>
	<script src="~/Content/dashforge/lib/moment/min/moment-with-locales.min.js"></script>
	<script src="~/Content/dashforge/lib/datatables.net/js/jquery.dataTables.min.js"></script>
	<script src="~/Content/dashforge/lib/datatables.net-dt/js/dataTables.dataTables.min.js"></script>
	<script src="~/Content/dashforge/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
	<script src="~/Content/dashforge/lib/datatables.net-responsive-dt/js/responsive.dataTables.min.js"></script>

	<script type="text/javascript">
		$(document).ready(function () {
			$('#dataArea').hide();
            $('.hasDatepicker').datepicker({
                format: 'd-M-yy'
			});

			var stack_bottomright = { "dir1": "up", "dir2": "left", "firstpos1": 15, "firstpos2": 15 };

			var result = "@ViewBag.Result";
			var error = "@ViewBag.ErrorMessage";
			var message = "@ViewBag.Message";

			if (result != "") {
				if (result == "True") {
					if (message == "") {
						var notice = new PNotify({
							title: "@UIResources.Confirmation",
							text: "@UIResources.CreateSucceed",
							width: "400px",
							type: 'success',
							addclass: 'stack-bottomright',
							stack: stack_bottomright,
							delay: 2000
						});

						notice.get().click(function () {
							notice.remove();
						});
					}
					else {
						var notice = new PNotify({
							title: "@UIResources.Confirmation",
							text: message,
							width: "400px",
							type: 'success',
							addclass: 'stack-bottomright',
							stack: stack_bottomright,
							delay: 2000
						});

						notice.get().click(function () {
							notice.remove();
						});
					}
				}
				else {
					if (error == "") {
						var notice = new PNotify({
							title: "@UIResources.ErrorMessage",
							text: "@UIResources.CreateFailed",
							width: "400px",
							type: 'error',
							addclass: 'stack-bottomright',
							delay: 2000
						});

						notice.get().click(function () {
							notice.remove();
						});
					}
					else {
						var notice = new PNotify({
							title: "@UIResources.ErrorMessage",
							text: error,
							width: "400px",
							type: 'error',
							addclass: 'stack-bottomright',
							delay: 2000
						});

						notice.get().click(function () {
							notice.remove();
						});
					}
				}
			}
		});

		var stack_bottomright = { "dir1": "up", "dir2": "left", "firstpos1": 15, "firstpos2": 15 };

		var locationId = 0;
		var locationType = 'country';

		function GenerateExcel() {
			if ($('#flDate').val() == '' || $('#endDate').val() == '') {
				alert('Please select the date first');
			} else if ($('#ddlProdCenter1').val() == '0') {
				alert('Please select the production center first');
			} else {
				var notice = new PNotify({
					title: "Generating Excel file",
					text: "Please wait a few seconds....",
					addclass: 'stack-bottomright',
					width: "400px",
					type: 'success',
					stack: stack_bottomright,
				});

				notice.get().click(function () {
					notice.remove();
				});

				var startDateFilter = $('#flDate').val();
				var endDateFilter = $('#endDate').val();
				var shift = $('#ddlShift').val();
				var group = $('#ddlGroupType').val();

				if ($('#ddlProdCenter1').val() == '0') {
					locationId = $('#ddlCountry1').val();
					locationType = 'country';
				} else if ($('#ddlDepartment1').val() == '0') {
					locationId = $('#ddlProdCenter1').val();
					locationType = 'productioncenter';
				} else if ($('#ddlSubDepartment1').val() == '0') {
					locationId = $('#ddlDepartment1').val();
					locationType = 'department';
				} else {
					locationId = $('#ddlSubDepartment1').val();
					locationType = 'subdepartment';
				}

				location.href = '@Url.Action("GenerateExcel", "MPP")?locID=' + locationId + '&startDateFilter=' + startDateFilter + '&endDateFilter=' + endDateFilter + '&locType=' + locationType+ '&group=' + group+ '&shift=' + shift;
			}
		};

		$('#btnSearch').on('click', function () {
			if ($('#flDate').val() == '') {
				alert('Please select the date first');
			} else if ($('#ddlProdCenter1').val() == '0') {
				alert('Please select the production center first');
			} else {
				$('#dataArea').show();
				$('#loading_overlay').removeClass('d-none');

				var dateFilter = $('#flDate').val();
				var endDateFilter = $('#endDate').val();
				var shift = $('#ddlShift').val();
				var group = $('#ddlGroupType').val();
				var pcId = $('#ddlProdCenter1').val();

				if ($('#ddlProdCenter1').val() == '0') {
					locationId = $('#ddlCountry1').val();
					locationType = 'country';
				} else if ($('#ddlDepartment1').val() == '0') {
					locationId = $('#ddlProdCenter1').val();
					locationType = 'productioncenter';
				} else if ($('#ddlSubDepartment1').val() == '0') {
					locationId = $('#ddlDepartment1').val();
					locationType = 'department';
				} else {
					locationId = $('#ddlSubDepartment1').val();
					locationType = 'subdepartment';
				}

				$('#mppTable').dataTable({
					"scrollX": true,
					"autoWidth": false,
					"processing": true,
					"serverSide": true,
					"filter": true,
					"orderMulti": false,
					"destroy": true,
					"pageLength": 10,
					"ajax": {
						"url": fastApp.BaseUrl + "/Mpp/GetAllStatus",
						"data": { dateFilter, endDateFilter,locID: locationId, locType: locationType, shift, groupTypeID: group, pcID: pcId },
						"type": "POST",
						"datatype": "json"
					},
					"rowCallback": function (row, data, index) {
						if (data.StatusMPP == 'Fully-Assigned') {
							$('td', row).css('background-color', '#33cc33');
						} else if (data.StatusMPP == 'Half-Assigned') {
							$('td', row).css('background-color', '#ff9900');
						} else if (data.StatusMPP == 'Overload') {
							$('td', row).css('background-color', '#cc3300');
						} else if (data.StatusMPP == 'Unlisted in Group') {
							$('td', row).css('background-color', '#00ccff');
						} else if (data.StatusMPP == 'Unallocated Machine') {
							$('td', row).css('background-color', '#9900cc');
						} else {
							$('td', row).css('background-color', '#ffff99');
						}
					},

					"columnDefs":
						[{
							"targets": [0],
							"searchable": false,
							"visible": false
						},
						{
							"targets": [1],
							"searchable": true,
							"orderable": true
						},
						{
							"targets": [2],
							"searchable": true,
							"orderable": true
						},
						{
							"targets": [3],
							"searchable": false,
							"orderable": true
						},
						{
							"targets": [4],
							"searchable": true,
							"orderable": true
						},
						{
							"targets": [5],
							"searchable": true,
							"orderable": true
						},
						{
							"targets": [6],
							"searchable": true,
							"orderable": true
						},
						{
							"targets": [7],
							"searchable": true,
							"orderable": true
						},
						{
							"targets": [8],
							"searchable": true,
							"orderable": true
						},
						{
							"targets": [9],
							"searchable": true,
							"orderable": true
						}
						],

					"columns": [
						{ "data": "ID", "name": "ID", "autoWidth": false },
						{
							"data": "Date",
							render: function (data, type, row) {
								if (data)
									return moment(data).format("DD-MMM-YY");
								else
									return '';
							}
						},
						{ "data": "Shift", "name": "Shift", "autoWidth": true },
						{ "data": "Location", "name": "Location", "autoWidth": true },
						{ "data": "EmployeeID", "name": "EmployeeID", "autoWidth": true },
						{ "data": "EmployeeName", "name": "EmployeeName", "autoWidth": true },
						{ "data": "RoleName", "name": "RoleName", "autoWidth": true },
						{ "data": "StatusMPP", "name": "StatusMPP", "autoWidth": true },
                        { "data": "EmployeeMachine", "name": "EmployeeMachine", "autoWidth": true },
					    {
						    "render": function (data, type, full, meta) {
                                if (@Model.Access.hasWriteStr) {
                                    if(full['ID'] != 0)
                                        return '<button class="btn-menu btn-default" onclick="EditAction(\'' + full['ID'] + '\')" data-toggle="modal" data-target="#modalEditMpp" title="Edit"><i class="fa fa-edit"></i></button>';
                                    else
                                        return '<button class="btn-menu btn-default" onclick="AddAction(\'' + full['EmployeeID'] + '\',\'' + full['Shift'] + '\')" data-toggle="modal" data-target="#modalAddMpp" title="Add Worker"><i class="fa fa-user-plus"></i></button>';
                                } else
								    return '-';
						    }
					    }

					],

					"footerCallback": function (row, data, start, end, display) {
						if (start == 0 && data[0]) {
							$("#idAvailable").html('Available ( ' + data[0].SumAvailable + ' employees )');
							$("#idHalfAssigned").html('Half-Assigned ( ' + data[0].SumHalfAssigned + ' employees )');
							$("#idFullyAssigned").html('Fully-Assigned ( ' + data[0].SumFullyAssigned + ' employees )');
							$("#idOverload").html('Overload ( ' + data[0].SumOverload + ' employees )');
						}
					},
					"initComplete": function (settings, json) {
						  $('#loading_overlay').addClass('d-none');
					}
				});
			}
		});

		$('#ddlProdCenter1').change(function () {
				$.ajax({
					type: "post",
					url: fastApp.BaseUrl + "/Mpp/GetDepartmentByProdCenterID",
					data: { id: $('#ddlProdCenter1').val() },
					datatype: "json",
					traditional: true,
					success: function (data) {
						var ddlTemp = "<select id='ddlDepartment1'>";
						for (var i = 0; i < data.length; i++) {
							ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
						}
						ddlTemp = ddlTemp + '</select>';
						$('#ddlDepartment1').html(ddlTemp);
						$('#ddlSubDepartment1').html("<select id='ddlSubDepartment1'><option value='0'>- Please Select -</option></select>");
					}
				});
			});

		$('#ddlDepartment1').change(function () {
				$.ajax({
					type: "post",
					url: fastApp.BaseUrl + "/Mpp/GetSubDepartmentByDepartmentID",
					data: { id: $('#ddlDepartment1').val() },
					datatype: "json",
					traditional: true,
					success: function (data) {
						var ddlTemp = "<select id='ddlSubDepartment1'>";
						for (var i = 0; i < data.length; i++) {
							ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
						}
						ddlTemp = ddlTemp + '</select>';
						$('#ddlSubDepartment1').html(ddlTemp);
					}
				});
        });

		function EditAction(id) {
			$("#OpenDialog").load(fastApp.BaseUrl + "/Mpp/EditFromStatus/" + id);
		};

        function AddAction(empID, shift) {
			if ($('#ddlDepartment1').val() == '0') {
				locationId = $('#ddlProdCenter1').val();
			} else {
				locationId = $('#ddlDepartment1').val();
			}

			$("#AddDialog").load(fastApp.BaseUrl + "/Mpp/AddUserFromStatus?empID=" + empID + "&date=" + $('#flDate').val() + "&locID=" + locationId + "&shift=" + shift);
        };
	</script>
}

