@model Fast.Web.Models.MachineModel
@using Fast.Web.Resources;

@using (Html.BeginForm("Edit", "Machine", FormMethod.Post, new { @class = "form-horizontal", @id = "ModalForm" }))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(x => x.ID, new { @Id = "ID" })
	<div class="modal-header pd-y-20 pd-x-20 pd-sm-x-50">
		<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</a>
		<div class="media align-items-center">
			<span class="tx-color-03 d-none d-sm-block"><i class="fa fa-edit" style="font-size:48px;"></i></span>
			<div class="media-body mg-sm-l-20">
				<h4 class="tx-18 tx-sm-20 mg-b-2">@UIResources.EditMachine</h4>
				<p class="tx-13 tx-color-03 mg-b-0">@UIResources.FillAllRequiredFields</p>
			</div>
		</div><!-- media -->
	</div><!-- modal-header -->
<div class="modal-body pd-sm-t-30 pd-sm-b-40 pd-sm-x-30">

	<div class="row row-sm mg-b-10">
		<div class="flex-1 row">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Country</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.CountryID, (IEnumerable<SelectListItem>)ViewBag.CountryList, new { @class = "form-control", @id = "ddlCountry" })
			</div>
		</div>
		<div class="flex-1 row">
			<div class="col-5">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.ProductionCenter</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.ProdCenterID, (IEnumerable<SelectListItem>)ViewBag.ProductionCenterList, new { @class = "form-control", @id = "ddlProdCenter" })
			</div>
		</div>
	</div>
	<div class="row row-sm mg-b-10">
		<div class="flex-1 row">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Department</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.DepartmentID, (IEnumerable<SelectListItem>)ViewBag.DepartmentList, new { @class = "form-control", @id = "ddlDepartment" })
			</div>
		</div>
		<div class="flex-1 row">
			<div class="col-5">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.SubDepartment</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.SubDepartmentID, (IEnumerable<SelectListItem>)ViewBag.SubDepartmentList, new { @class = "form-control", @id = "ddlSubDepartment" })
			</div>
		</div>
	</div>

	<div class="row row-sm mg-b-10">
		<div class="flex-1 row">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Code</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.Code, null, new { @class = "form-control", @id = "Code" })
			</div>
		</div>
		<div class="flex-1 row">
			<div class="col-sm-5">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Items</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.Items, null, new { @class = "form-control", @id = "Items" })
			</div>
		</div>
	</div>

	<div class="row row-sm mg-b-10">
		<div class="flex-1 row">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.LegalEntity</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.LegalEntity, (IEnumerable<SelectListItem>)ViewBag.LegalEntityList, new { @class = "form-control", @id = "ddlLegalEntity1" })
			</div>
		</div>
		<div class="flex-1 row">
			<div class="col-sm-5">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Brand</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.MachineBrand, (IEnumerable<SelectListItem>)ViewBag.MachineBrandList, new { @class = "form-control", @id = "ddlBrand1" })
			</div>
		</div>
	</div>

	<div class="row row-sm mg-b-10">
		<div class="flex-1 row">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.MachineType</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.MachineTypeID, (IEnumerable<SelectListItem>)ViewBag.MachineTypeList, new { @class = "form-control", @id = "ddlMachineType" })
			</div>
		</div>
		<div class="flex-1 row">
			<div class="col-sm-5">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.MachineSN</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.MachineSN, null, new { @class = "form-control", @id = "MachineNo" })
			</div>
		</div>
	</div>
	<div class="row row-sm mg-b-10">
		<div class="flex-1 row">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.AssetID</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.SamID, null, new { @class = "form-control", @id = "SamID" })
			</div>
		</div>
		<div class="flex-1 row">
			<div class="col-sm-5">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Area</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.Notes, (IEnumerable<SelectListItem>)ViewBag.AreaList, new { @class = "form-control", @id = "ddlArea" })
			</div>
		</div>
	</div>
	<div class="row row-sm mg-b-10">
		<div class="flex-1 row">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Cluster</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.Cluster, (IEnumerable<SelectListItem>)ViewBag.ClusterList, new { @class = "form-control", @id = "ddlCluster" })
			</div>
		</div>
		<div class="flex-1 row">
			<div class="col-sm-5">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.OrderNumber</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.OrderNumber, null, new { @class = "form-control", @id = "tbOrderNumber", @type = "number" })
			</div>
		</div>
	</div>
	<div class="row row-sm mg-b-10">
		<div class="flex-1 row">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.CellophanerSpeed</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.CellophanerSpeed, null, new { @class = "form-control", @id = "tbCellophanerSpeed" })
			</div>
		</div>
		<div class="flex-1 row">
			<div class="col-sm-5">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.DesignSpeed</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.DesignSpeed, null, new { @class = "form-control", @id = "tbDesignSpeed" })
			</div>
		</div>
	</div>
	<div class="row row-sm mg-b-10">
		<div class="flex-1 row">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.LinkUp</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.LinkUp, null, new { @class = "form-control", @id = "tbLinkUp" })
			</div>
		</div>
		<div class="flex-1 row">
		</div>
	</div>
</div><!-- modal-body -->
	<div class="modal-footer pd-x-20 pd-y-15">
		<button type="button" class="btn btn-white" data-dismiss="modal">@UIResources.Cancel</button>
		<button type="submit" class="btn btn-primary">@UIResources.Save</button>
	</div>
}

<script type="text/javascript">
	$(document).ready(function () {
		$('#ddlCountry').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/Machine/GetProductionCenterByCountryID",
				data: { id: $('#ddlCountry').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					var ddlTemp = "<select id='ddlProdCenter'>";
					for (var i = 0; i < data.length; i++) {
						ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
					}
					ddlTemp = ddlTemp + '</select>';
					$('#ddlProdCenter').html(ddlTemp);
					$('#ddlDepartment').html("<select id='ddlDepartment'><option value='0'>- Please Select -</option></select>");
					$('#ddlSubDepartment').html("<select id='ddlSubDepartment'><option value='0'>- Please Select -</option></select>");
				}
			});
		});

		$('#ddlProdCenter').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/Machine/GetDepartmentByProdCenterID",
				data: { id: $('#ddlProdCenter').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					var ddlTemp = "<select id='ddlDepartment'>";
					var ddlMT = "<select id='ddlMachineType'>";
					var isMT = false;
					for (var i = 0; i < data.length; i++) {
						if (data[i].Value.indexOf("#") >= 0) {
							isMT = true;
							ddlMT = ddlMT + '<option value=' + data[i].Value.replace("#", "") + '>' + data[i].Text + '</option>';
						} else {
							ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
						}
					}

					if (isMT) {
						ddlMT = ddlMT + '</select>';
						$('#ddlMachineType').html(ddlMT);
					} else {
						$('#ddlMachineType').html("<select id='ddlMachineType'><option value='0'>- Please Select -</option></select>");
					}

					ddlTemp = ddlTemp + '</select>';
					$('#ddlDepartment').html(ddlTemp);
					$('#ddlSubDepartment').html("<select id='ddlSubDepartment1'><option value='0'>- Please Select -</option></select>");
				}
			});
		});

		$('#ddlDepartment').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/Machine/GetSubDepartmentByDepartmentID",
				data: { id: $('#ddlDepartment').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					var ddlTemp = "<select id='ddlSubDepartment'>";
					var ddlMT = "<select id='ddlMachineType'>";
					var isMT = false;
					for (var i = 0; i < data.length; i++) {
						if (data[i].Value.indexOf("#") >= 0) {
							isMT = true;
							ddlMT = ddlMT + '<option value=' + data[i].Value.replace("#", "") + '>' + data[i].Text + '</option>';
						} else {
							ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
						}
					}

					if (isMT) {
						ddlMT = ddlMT + '</select>';
						$('#ddlMachineType').html(ddlMT);
					} else {
						$('#ddlMachineType').html("<select id='ddlMachineType'><option value='0'>- Please Select -</option></select>");
					}

					ddlTemp = ddlTemp + '</select>';
					$('#ddlSubDepartment').html(ddlTemp);
				}
			});
		});

		$('#ddlSubDepartment').change(function () {
			$.ajax({
				type: "post",
				url: fastApp.BaseUrl + "/Machine/GetMachineTypeBySubDepartmentID",
				data: { id: $('#ddlSubDepartment').val() },
				datatype: "json",
				traditional: true,
				success: function (data) {
					if (data.length == 0) {
						$('#ddlMachineType').html("<select id='ddlMachineType'><option value='0'>- Please Select -</option></select>");
					} else {
						var ddlMT = "<select id='ddlMachineType'>";
						for (var i = 0; i < data.length; i++) {
							ddlMT = ddlMT + '<option value=' + data[i].Value.replace("#", "") + '>' + data[i].Text + '</option>';
						}

						ddlMT = ddlMT + '</select>';
						$('#ddlMachineType').html(ddlMT);
					}
				}
			});
		});
	});
</script>