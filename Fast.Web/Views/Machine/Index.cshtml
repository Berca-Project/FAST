@model Fast.Web.Models.MachineModel
@using Fast.Web.Resources;
@using Fast.Web.Utils;

@section CSS_lib{
    <!-- Specific Page Vendor CSS -->
    <link href="~/Content/dashforge/lib/typicons.font/typicons.css" rel="stylesheet">
    <link href="~/Content/dashforge/lib/prismjs/themes/prism-vs.css" rel="stylesheet">
    <link href="~/Content/dashforge/lib/datatables.net-dt/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="~/Content/dashforge/lib/datatables.net-responsive-dt/css/responsive.dataTables.min.css" rel="stylesheet">

}

@section Styles{
    <style>
        .dataTables_scrollHead table, .dataTables_scrollBody table {
            width: 2000px !important;
        }
    </style>
}


<div class="content content-fixed bd-b">
    <div class="container-fluid pd-x-0 pd-lg-x-10 pd-xl-x-0">
        <div class="d-sm-flex align-items-center justify-content-between">
            <div>
                <h4 class="mg-b-5">@UIResources.MachineList</h4>
                <p class="mg-b-0 tx-color-03">@UIResources.MachineManagement</p>
            </div>
            <div class="mg-t-20 mg-sm-t-0">
                <div class="row">
                    <button class="btn btn-primary btn-sm pd-x-15 btn-uppercase dtAddButton" id="loadAll">
                        <i data-feather="repeat" class="mg-r-5"></i> Load All
                    </button>
                    @*<button class="btn btn-primary btn-sm pd-x-15 btn-uppercase dtAddButton" onclick="location.href='@Url.Action("Index", "MachineType")'">
                            <i data-feather="layers" class="mg-r-5"></i> @UIResources.MachineTypeGroup
                        </button>*@
                    <button class="btn btn-primary btn-sm pd-x-15 btn-uppercase dtAddButton" onclick="location.href='@Url.Action("Index", "MachineAllocation")'">
                        <i data-feather="layers" class="mg-r-5"></i> @UIResources.MachineAllocationList
                    </button>
                    @if (Model.Access.hasPrint)
                    {
                        <button class="btn btn-outline-secondary btn-sm pd-x-15 btn-uppercase dtAddButton" onclick="GenerateExcel()">
                            <span><i class="fa fa-lg fa-file-excel"></i> EXCEL</span>
                        </button>
                        <div id="buttonprint" class="dtButton"></div>
                    }
                    @if (Model.Access.hasWrite)
                    {
                        <button class="btn btn-primary btn-sm pd-x-15 btn-uppercase dtAddButton" data-toggle="modal" data-target="#modalAddMachine">
                            <i data-feather="plus" class="mg-r-5"></i> @UIResources.NEW
                        </button>
                    }
                </div>
            </div>
        </div><!-- End content header -->
        <div data-label="Example" class="df-example demo-table dtMarginTop">
            <table class="table table-bordered table-striped mb-none border-bottom-0 table-fast" id="machineTable" style="overflow-x:scroll">
                <thead>
                    <tr>
                        <th>@UIResources.ID</th>
                        <th>@UIResources.Location</th>
                        <th>@UIResources.Code</th>
                        <th>@UIResources.LegalEntity</th>
                        <th>@UIResources.Brand</th>
                        <th>@UIResources.MachineType</th>
                        <th>@UIResources.MachineSN</th>
                        <th>@UIResources.SamID</th>
                        <th>@UIResources.Area</th>
                        <th>@UIResources.Cluster</th>
                        <th>@UIResources.LinkUp</th>
                        <th>@UIResources.OrderNumber</th>
                        <th>@UIResources.DesignSpeed</th>
                        <th>@UIResources.CellophanerSpeed</th>
                        <th>@UIResources.ModifiedDate</th>
                        <th>@UIResources.ModifiedBy</th>
                        <th>@UIResources.Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEditMachine" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document" style="max-width:750px;">
        <div class="modal-content" id="OpenDialog">
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->

<div class="modal fade" id="modalAddMachine" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document" style="max-width:750px;">
        <div class="modal-content">
            @using (Html.BeginForm("Create", "Machine", FormMethod.Post, new { @class = "form-horizontal", @id = "ModalForm" }))
            {
                @Html.AntiForgeryToken()
