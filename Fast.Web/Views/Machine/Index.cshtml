                            </div>
                        </div>
                        <div class="flex-1 row">
                            <div class="col-5">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.ProductionCenter</label>
                            </div>
                            <div class="col-7">
                                @Html.DropDownListFor(x => x.ProdCenterID, (IEnumerable<SelectListItem>)ViewBag.ProductionCenterList, new { @class = "form-control", @id = "ddlProdCenter1" })
                            </div>
                        </div>
                    </div>
                    <div class="row row-sm mg-b-10">
                        <div class="flex-1 row">
                            <div class="col-4">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Department</label>
                            </div>
                            <div class="col-7">
                                @Html.DropDownListFor(x => x.DepartmentID, (IEnumerable<SelectListItem>)ViewBag.DepartmentList, new { @class = "form-control", @id = "ddlDepartment1" })
                            </div>
                        </div>
                        <div class="flex-1 row">
                            <div class="col-5">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.SubDepartment</label>
                            </div>
                            <div class="col-7">
                                @Html.DropDownListFor(x => x.SubDepartmentID, (IEnumerable<SelectListItem>)ViewBag.SubDepartmentList, new { @class = "form-control", @id = "ddlSubDepartment1" })
                            </div>
                        </div>
                    </div>

                    <div class="row row-sm mg-b-10">
                        <div class="flex-1 row">
                            <div class="col-4">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Code</label>
                            </div>
                            <div class="col-7">
                                @Html.TextBoxFor(x => x.Code, null, new { @class = "form-control", @id = "Code", @required = "required", @onkeypress = "return checkForComma(event);" })
                            </div>
                        </div>
                        <div class="flex-1 row">
                            <div class="col-sm-5">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Items</label>
                            </div>
                            <div class="col-7">
                                @Html.TextBoxFor(x => x.Items, null, new { @class = "form-control", @id = "Items" })
                            </div>
                        </div>
                    </div>

                    <div class="row row-sm mg-b-10">
                        <div class="flex-1 row">
                            <div class="col-4">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.LegalEntity</label>
                            </div>
                            <div class="col-7">
                                @Html.DropDownListFor(x => x.LegalEntity, (IEnumerable<SelectListItem>)ViewBag.LegalEntityList, new { @class = "form-control", @id = "ddlLegalEntity" })
                            </div>
                        </div>
                        <div class="flex-1 row">
                            <div class="col-sm-5">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Brand</label>
                            </div>
                            <div class="col-7">
                                @Html.DropDownListFor(x => x.MachineBrand, (IEnumerable<SelectListItem>)ViewBag.MachineBrandList, new { @class = "form-control", @id = "ddlBrand" })
                            </div>
                        </div>
                    </div>

                    <div class="row row-sm mg-b-10">
                        <div class="flex-1 row">
                            <div class="col-4">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.MachineType</label>
                            </div>
                            <div class="col-7">
                                @Html.DropDownListFor(x => x.MachineTypeID, (IEnumerable<SelectListItem>)ViewBag.MachineTypeList, new { @class = "form-control", @id = "ddlMachineType" })
                            </div>
                        </div>
                        <div class="flex-1 row">
                            <div class="col-sm-5">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.MachineSN</label>
                            </div>
                            <div class="col-7">
                                @Html.TextBoxFor(x => x.MachineSN, null, new { @class = "form-control", @id = "MachineNo" })
                            </div>
                        </div>
                    </div>
                    <div class="row row-sm mg-b-10">
                        <div class="flex-1 row">
                            <div class="col-4">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.AssetID</label>
                            </div>
                            <div class="col-7">
                                @Html.TextBoxFor(x => x.SamID, null, new { @class = "form-control", @id = "SamID" })
                            </div>
                        </div>
                        <div class="flex-1 row">
                            <div class="col-sm-5">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Area</label>
                            </div>
                            <div class="col-7">
                                @Html.DropDownListFor(x => x.Notes, (IEnumerable<SelectListItem>)ViewBag.AreaList, new { @class = "form-control", @id = "ddlArea" })
                            </div>
                        </div>
                    </div>
                    <div class="row row-sm mg-b-10">
                        <div class="flex-1 row">
                            <div class="col-4">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Cluster</label>
                            </div>
                            <div class="col-7">
                                @Html.DropDownListFor(x => x.Cluster, (IEnumerable<SelectListItem>)ViewBag.ClusterList, new { @class = "form-control", @id = "ddlCluster" })
                            </div>
                        </div>
                        <div class="flex-1 row">
                            <div class="col-sm-5">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.OrderNumber</label>
                            </div>
                            <div class="col-7">
                                @Html.TextBoxFor(x => x.OrderNumber, null, new { @class = "form-control", @id = "tbOrderNumber", @type = "number" })
                            </div>
                        </div>
                    </div>
                    <div class="row row-sm mg-b-10">
                        <div class="flex-1 row">
                            <div class="col-4">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.CellophanerSpeed</label>
                            </div>
                            <div class="col-7">
                                @Html.TextBoxFor(x => x.CellophanerSpeed, null, new { @class = "form-control", @id = "tbCellophanerSpeed" })
                            </div>
                        </div>
                        <div class="flex-1 row">
                            <div class="col-sm-5">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.DesignSpeed/label>
                            </div>
                            <div class="col-7">
                                @Html.TextBoxFor(x => x.DesignSpeed, null, new { @class = "form-control", @id = "tbDesignSpeed" })
                            </div>
                        </div>
                    </div>
                    <div class="row row-sm mg-b-10">
                        <div class="flex-1 row">
                            <div class="col-4">
                                <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.LinkUp</label>
                            </div>
                            <div class="col-7">
                                @Html.TextBoxFor(x => x.LinkUp, null, new { @class = "form-control", @id = "tbLinkUp" })
                            </div>
                        </div>
                        <div class="flex-1 row">
                        </div>
                    </div>
                    <div class="row row-sm mg-b-10">
                        <div class="flex-1 row">
                            <div class="col-12">
                            </div>
                        </div>
                        <div class="flex-1 row">
                            <div class="col-12">
                                <p id="error-message"></p>
                            </div>
                        </div>
                    </div>
                </div><!-- modal-body -->
                <div class="modal-footer pd-x-20 pd-y-15">
                    <button type="button" class="btn btn-white" data-dismiss="modal">@UIResources.Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="Validate()">@UIResources.Save</button>
                </div>
            }
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered wd-sm-650" role="document">
        <div class="modal-content">
            <div class="modal-header pd-y-20 pd-x-20 pd-sm-x-30">
                <a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
                <div class="media align-items-center">
                    <span class="tx-color-03 d-none d-sm-block"><i data-feather="x-circle" class="wd-60 ht-60"></i></span>
                    <div class="media-body mg-sm-l-20">
                        <h4 class="tx-18 tx-sm-20 mg-b-2">@UIResources.Confirmation</h4>
                    </div>
                </div><!-- media -->
            </div><!-- modal-header -->
            <div class="modal-body">
                <div class="form-group">
                    <label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03" id="deleteconfirm"></label>
                </div>
            </div><!-- modal-body -->
            <div class="modal-footer pd-x-20 pd-y-15">
                <button type="button" class="btn btn-white" data-dismiss="modal" id="modal-btn-cancel">@UIResources.NO</button>
                <button type="submit" class="btn btn-primary" id="modal-btn-ok">@UIResources.YES</button>
            </div>
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->

@section Scripts{
    <!-- Specific Page Vendor -->
    <script src="~/Content/dashforge/lib/prismjs/prism.js"></script>
    <script src="~/Content/dashforge/lib/moment/min/moment-with-locales.min.js"></script>
    <script src="~/Content/dashforge/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/dashforge/lib/datatables.net-dt/js/dataTables.dataTables.min.js"></script>
    <script src="~/Content/dashforge/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/dashforge/lib/datatables.net-responsive-dt/js/responsive.dataTables.min.js"></script>
    <script src="~/Content/theme/lib/datatable-export/dataTables.buttons.min.js"></script>
    <script src="~/Content/theme/lib/datatable-export/buttons.flash.min.js"></script>
    <script src="~/Content/theme/lib/datatable-export/buttons.html5.min.js"></script>
    <script src="~/Content/theme/lib/datatable-export/buttons.print.min.js"></script>
    <script src="~/Content/theme/lib/datatable-export/jszip.min.js"></script>
    <script src="~/Content/theme/lib/datatable-export/pdfmake.min.js"></script>
    <script src="~/Content/theme/lib/datatable-export/vfs_fonts.js"></script>
    <style>
        .dataTables_scrollBody thead tr {
            visibility: collapse
        }
    </style>

    <script type="text/javascript">
		$(document).ready(function () {
			var table = $('#machineTable').dataTable({
				"scrollX": true,
				"autoWidth": false,
				"processing": true,
				"serverSide": true,
				"filter": true,
				"orderMulti": false,
				"destroy": true,
				"pageLength": 10,
				"ajax": {
					"url": fastApp.BaseUrl + "/Machine/GetAllByLocation",
					"type": "POST",
					"datatype": "json"
				},

				"columnDefs":
					[{
						"targets": [0],
						"visible": false,
						"searchable": false,
						"orderable": false
					},
					{
						"targets": [1],
						"searchable": true,
						"orderable": true
					},
					{
						"targets": [2],
						"searchable": true,
						"orderable": true
					},
					{
						"targets": [3],
						"searchable": true,
						"orderable": true
					},
					{
						"targets": [4],
						"searchable": true,
						"orderable": true
					},
					{
						"targets": [5],
						"searchable": true,
						"orderable": true
					},
					{
						"targets": [6],
						"searchable": true,
						"orderable": true
					},
					{
						"targets": [7],
						"searchable": false,
						"orderable": false
                    },
                    {
						"targets": [8],
						"searchable": false,
						"orderable": false
					},
                    {
						"targets": [9],
						"searchable": false,
						"orderable": false
					},
                    {
						"targets": [10],
						"searchable": false,
						"orderable": false
					},
                    {
						"targets": [11],
						"searchable": false,
						"orderable": false
					},
					{
						"targets": [12],
                        "searchable": false,
                        "orderable": false
					},
					{
						"targets": [13],
                        "searchable": false,
                        "orderable": false
					},
                    {
						"targets": [14],
						"searchable": false,
						"orderable": false
					},
					{
						"targets": [15],
                        "searchable": false,
                        "orderable": false
					},
					{
						"targets": [16],
                        "searchable": false,
                        "orderable": false
					}
					],

				"columns": [
					{ "data": "ID", "name": "ID", "autoWidth": false },
					{ "data": "Location", "name": "Location", "autoWidth": true },
					{ "data": "Code", "name": "Code", "autoWidth": true },
					{ "data": "LegalEntity", "name": "LegalEntity", "autoWidth": true },
					{ "data": "MachineBrand", "name": "MachineBrand", "autoWidth": true },
					{ "data": "MachineType", "name": "MachineType", "autoWidth": true },
					{ "data": "MachineSN", "name": "MachineSN", "autoWidth": true },
					{ "data": "SamID", "name": "SamID", "autoWidth": true },
					{ "data": "Notes", "name": "Notes", "autoWidth": true },
                    { "data": "Cluster", "name": "Cluster", "autoWidth": true },
					{ "data": "LinkUp", "name": "LinkUp", "autoWidth": true },
					{ "data": "OrderNumber", "name": "OrderNumber", "autoWidth": true },
					{ "data": "DesignSpeed", "name": "DesignSpeed", "autoWidth": true },
					{ "data": "CellophanerSpeed", "name": "CellophanerSpeed", "autoWidth": true },
					{
						"data": "ModifiedDate",
						render: function (data, type, row) {
							if (data)
								return moment(data).format("DD-MMM-YY HH:mm");
							else
								return '';
						}
					},
					{ "data": "ModifiedBy", "name": "ModifiedBy", "autoWidth": true },
					{
						"render": function (data, type, full, meta) {
							if (@Model.Access.hasWriteStr) {
								return '<button class="btn-menu btn-default" onclick="RenderActions(\'' + full['ID'] + '\')" data-toggle="modal" data-target="#modalEditMachine" title="Edit"><i class="fa fa-edit"></i></button>'+
										'<button class="btn-menu btn-default" onclick="Delete(\'' + full['ID'] + '\',\'' + full['Code'] + '\')" title="Delete"><i class="fa fa-trash"></i></button>';
							} else
								return '-';
						}
					}
				]
			});

			var buttons2 = new $.fn.dataTable.Buttons(table, {
				buttons: [
					{
						"text": '<i class="fa fa-lg fa-print"></i> Print',
						"extend": 'print',
						"title": 'Master Machine List',
						"className": 'btn btn-sm pd-x-15 btn-white btn-uppercase',
						"exportOptions": {
							columns: [0, 1, 2, 3, 4, 5, 6]
						}
					}
				]
			}).container().appendTo($('#buttonprint'));

			$('#ddlCountry1').change(function () {
				$.ajax({
					type: "post",
					url: fastApp.BaseUrl + "/Machine/GetProductionCenterByCountryID",
					data: { id: $('#ddlCountry1').val() },
					datatype: "json",
					traditional: true,
					success: function (data) {
						var ddlTemp = "<select id='ddlProdCenter1'>";
						for (var i = 0; i < data.length; i++) {
							ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
						}
						ddlTemp = ddlTemp + '</select>';
						$('#ddlProdCenter1').html(ddlTemp);
						$('#ddlDepartment1').html("<select id='ddlDepartment1'><option value='0'>- Please Select -</option></select>");
						$('#ddlSubDepartment1').html("<select id='ddlSubDepartment1'><option value='0'>- Please Select -</option></select>");
					}
				});
			});

			$('#ddlProdCenter1').change(function () {
				$.ajax({
					type: "post",
					url: fastApp.BaseUrl + "/Machine/GetDepartmentByProdCenterID",
					data: { id: $('#ddlProdCenter1').val() },
					datatype: "json",
					traditional: true,
					success: function (data) {
						var ddlTemp = "<select id='ddlDepartment1'>";
						var ddlMT = "<select id='ddlMachineType'>";
						var isMT = false;
						for (var i = 0; i < data.length; i++) {
							if (data[i].Value.indexOf("#") >= 0) {
								isMT = true;
								ddlMT = ddlMT + '<option value=' + data[i].Value.replace("#", "") + '>' + data[i].Text + '</option>';
							} else {
								ddlTemp = ddlTemp + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
							}
						}

						if (isMT) {
							ddlMT = ddlMT + '</select>';
							$('#ddlMachineType').html(ddlMT);
						} else {
							$('#ddlMachineType').html("<select id='ddlMachineType'><option value='0'>- Please Select -</option></select>");
						}

						ddlTemp = ddlTemp + '</select>';
						$('#ddlDepartment1').html(ddlTemp);
						$('#ddlSubDepartment1').html("<select id='ddlSubDepartment1'><option value='0'>- Please Select -</option></select>");
					}
				});
			});

			$('#ddlDepartment1').change(function () {
				$.ajax({
					type: "post",
					url: fastApp.BaseUrl + "/Machine/GetSubDepartmentByDepartmentID",
					data: { id: $('#ddlDepartment1').val() },
