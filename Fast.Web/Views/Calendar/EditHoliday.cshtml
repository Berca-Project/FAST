@model Fast.Web.Models.CalendarHolidayModel
@using Fast.Web.Resources;

@using (Html.BeginForm("EditHoliday", "Calendar", FormMethod.Post, new { @class = "form-horizontal", @id = "ModalForm" }))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(x => x.ID, new { @Id = "ID" })
	@Html.HiddenFor(x => x.IsDeleted, new { @Id = "IsDeleted" })
	<div class="modal-header pd-y-20 pd-x-20 pd-sm-x-50">
		<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</a>
		<div class="media align-items-center">
			<span class="tx-color-03 d-none d-sm-block"><i class="fa fa-edit" style="font-size:48px;"></i></span>
			<div class="media-body mg-sm-l-20">
				<h4 class="tx-18 tx-sm-20 mg-b-2">@UIResources.EditCalendarHoliday</h4>
				<p class="tx-13 tx-color-03 mg-b-0">@UIResources.FillAllRequiredFields</p>
			</div>
		</div><!-- media -->
	</div><!-- modal-header -->
	<div class="modal-body pd-sm-t-20 pd-sm-b-20 pd-sm-x-30">
		<div class="row row-sm mg-b-10">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Country</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.CountryID, (IEnumerable<SelectListItem>)ViewBag.CountryList, new { @class = "form-control", @id = "ddlCountry1" })
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.ProductionCenter</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.ProdCenterID, (IEnumerable<SelectListItem>)ViewBag.ProductionCenterList, new { @class = "form-control", @id = "ddlProdCenter1" })
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Department</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.DepartmentID, (IEnumerable<SelectListItem>)ViewBag.DepartmentList, new { @class = "form-control", @id = "ddlDepartment1" })
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.SubDepartment</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.SubDepartmentID, (IEnumerable<SelectListItem>)ViewBag.SubDepartmentList, new { @class = "form-control", @id = "ddlSubDepartment1" })
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Type</label>
			</div>
			<div class="col-7">
				@Html.DropDownListFor(x => x.Color, (IEnumerable<SelectListItem>)ViewBag.ColorList, new { @class = "form-control", @id = "ddlColorEdit" })
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Date</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.Date, "{0:dd-MMM-yy}", new { @class = "form-control", @id = "tbDate1" })
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-4">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Description</label>
			</div>
			<div class="col-7">
				@Html.TextBoxFor(x => x.Description, null, new { @class = "form-control", @id = "tbDescription1" })
			</div>
		</div><!-- modal-body -->
	</div>
	<div class="modal-footer pd-x-20 pd-y-15">
		<button type="button" class="btn btn-white" data-dismiss="modal">@UIResources.Cancel</button>
		<button type="submit" class="btn btn-primary">@UIResources.Save</button>
	</div>

	<script type="text/javascript">
		$(document).ready(function () {
			$('#tbDate1').datepicker({
				format: "dd-M-yy",
				changeMonth: true,
				changeYear: true,
				minDate: new Date
			});

			$('select#ddlColorEdit option').each(function () {
				var option = $(this);
				option.css(
					'background-color',
					option.val()
				);
				option.css(
					'color',
					'black'
				);
			});

			$('#ddlColorEdit').change(function () {
				if ($('#ddlColorEdit').val() == "0") {
					$("#ddlColorEdit").css("background-color", "white");
				} else {
					$("#ddlColorEdit").css("background-color", $('#ddlColor').val());
				}
			});

			var result = "@ViewBag.Result";
			var error = "@ViewBag.ErrorMessage";

			if (result != "") {
				if (result == "True") {
					var notice = new PNotify({
						title: "@UIResources.Confirmation",
						text: "@UIResources.UpdateSucceed",
						width: "400px",
						type: 'success',
						addclass: 'stack-bottomright',
						stack: stack_bottomright
					});

					notice.get().click(function () {
						notice.remove();
					});
				}
				else {
					if (error == "") {
						var notice = new PNotify({
							title: "@UIResources.ErrorMessage",
							text: "@UIResources.UpdateFailed",
							width: "400px",
							type: 'error',
							hide: false,
							addclass: 'stack-bottomright',
							buttons: {
								sticker: false
							}
						});

						notice.get().click(function () {
							notice.remove();
						});
					}
					else {
						var notice = new PNotify({
							title: "@UIResources.ErrorMessage",
							text: error,
							width: "400px",
							type: 'error',
							hide: false,
							addclass: 'stack-bottomright',
							buttons: {
								sticker: false
							}
						});

						notice.get().click(function () {
							notice.remove();
						});
					}
				}
			}
		});
	</script>
}
