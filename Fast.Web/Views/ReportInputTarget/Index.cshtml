                            <p class="tx-13 tx-color-03 mg-b-0">Upload Input Target</p>
                        </div>
                    </div><!-- media -->
                </div><!-- modal-header -->

                <div class="modal-body pd-sm-t-30 pd-sm-b-40 pd-sm-x-30">
                    <div class="form-group row">
                        <label class="col-3 col-form-label">@UIResources.ProductionCenter</label>
                        <div class="col-9">
                            @Html.DropDownListFor(x => x.ProdCenterID, (IEnumerable<SelectListItem>)ViewBag.ProductionCenterList, new { @class = "form-control", @id = "ddlProdCenter2", @required = "required" })
                        </div>
                    </div>
                    <div class="form-control-static">
                        <span class="btn btn-success fileinput-button btn-block">
                            @Html.TextBoxFor(x => x.PostedFilename, null, new { @type = "file", @accept = ".xls, .xlsx", @required = "required", @id = "customFile" })
                        </span>
                    </div>
                    <br />
                    <div class="progress" id="loadingbar" style="height: 30px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">Please wait a few seconds...</div>
                    </div>
                </div>
                <div class="modal-footer pd-x-20 pd-y-15">
                    <button type="button" class="btn btn-white" data-dismiss="modal" id="btnCancel">@UIResources.Cancel</button>
                    <button type="button" class="btn btn-primary" id="btnSubmit" onclick="OnSubmit()">@UIResources.Upload</button>
                </div>
            }
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal Upload-->

