                //        if (loc[prodCenter][i].opts[j].opt == opt && loc[prodCenter][i].opts[j].data != "")
                //            $("#PPwaste").html(loc[prodCenter][i].opts[j].data);
                //} else $("#PPwaste").html("");
            })


             //export
            $("#btnExport").on("click", function () {
                console.log("Yang dikirim : " + WasteTableData);
               
                
			    var datajson = JSON.stringify({
				    waste: WasteTableData
			    });
                
                $('#loading_overlay').removeClass('d-none');
                $.ajax({
                    type: "POST",
                    url: fastApp.BaseUrl + "/ReportPPWaste/ExportTable",
                    data: datajson,
                    contentType: "application/json; charset=utf-8",
                    success: function (result) {
                        $('#loading_overlay').addClass('d-none');
                        if (result.Status) {
                             window.location = fastApp.BaseUrl + "/ReportPPWaste/Download";
                        }
                    },
                    complete: function () {
                        $('#loading_overlay').addClass('d-none');
                    },
                });
            })
            $("#btnDashboard").on("click", function () {
                if (WasteTableData == null) {
                    showError("Do search first!");
                    return;
                } else if (WasteTableData == []) {
                    showError("Empty data!");
                    return;
                }
                $('#loading_overlay').removeClass('d-none');
                $.ajax({
                    type: "POST",
                    url: fastApp.BaseUrl + "/ReportPPWaste/SetDashboard",
                    data: JSON.stringify({
                        waste: WasteTableData,
                        location:param.ProdCenterID,
                        type:param.LPH,
			        }),
                    contentType: "application/json; charset=utf-8",
                    complete: function () {
                        $('#loading_overlay').addClass('d-none');
                    },
                });
            })
        });
    </script>


    <!------------------------ DATEPICKER ------------------------------------>
    <script>
        $(document).ready(function () {
            $('.input-daterange').datepicker({
                calendarWeeks: true,
                enableOnReadonly: true,
                todayHighlight: true,
                format: 'dd-M-yy',
                language: 'id-ID',
            });
            $(".input-daterange [name='start']").on('changeDate', function (selected) {
                $("[name='end']").datepicker('setStartDate', selected.date);
                $("[name='weekStart']").val(moment(selected.date).format("W"));
            });
            $(".input-daterange [name='end']").on('changeDate', function (selected) {
                $("[name='start']").datepicker('setEndDate', selected.date);
                $("[name='weekEnd']").val(moment(selected.date).format("W"));
            });
        });
    </script>
