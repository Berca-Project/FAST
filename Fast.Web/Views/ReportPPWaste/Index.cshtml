    <script>
        function showError(errorMsg) {
            var notice = new PNotify({
	            title: "@UIResources.ErrorMessage",
	            text: errorMsg,
	            width: "400px",
                type: 'error',
                addclass: 'stack-bottomright',
	            hide: false,
	            buttons: {
		            sticker: false
	            }
            });

            notice.get().click(function () {
	            notice.remove();
            });
        }
        
        function toFloat(a) {
            return parseFloat((a == null || a == "" || isNaN(a)) ? 0 : a);
        }
        function toTime(str) {
            const milliseconds = str.substring(str.lastIndexOf("(") + 1, str.lastIndexOf(")"));
            return moment(parseInt(milliseconds)).format("HH:mm");
        }
        var WasteTableData;
        var param;
        $(document).ready(function () {

            $("#btnSearch").on("click", function () {
                param = {
                    StartDate: $("[name=start]").val(),
                    EndDate: $("[name=end]").val(),
                    LPH: $("[name=lph]").val(),
                    ProdCenterID: $("[name=prodCenter]").val(),
                    Waste: $('[name=waste]').val(),
                    WasteType: $('[name=wastetype]').val(),
                };
                if (param.StartDate == "") {
                    showError("Start Date can't be empty");
                    return;
                }
                if (param.EndDate == "") {
                    showError("End Date can't be empty");
                    return;
                }
                if (param.ProdCenterID == "0") {
                    showError("Production Center can't be empty");
                    return;
                }
                if (param.LPH == "") {
                    showError("Line can't be empty");
                    return;
                }
                $('#loading_overlay').removeClass('d-none');
                $.ajax({
                    type: "post",
                    url: fastApp.BaseUrl + "/ReportPPWaste/GetReportWithParam",
                    data: param,
                    datatype: "json",
                    traditional: true,
                    success: function (result) {
                        //let startDate = moment;m (param.StartDate, 'DD-MMM-YYYY');
                        //let endDate = moment(param.EndDate, 'DD-MMM-YYYY');
                        //let headerView = "";
                        //let shiftView = "";
                        let rowView = "";

                        //for (let i = startDate; i <= endDate; i.add(1, 'days')) {
                        //    const date = i.format('ddd, DD-MM-YYYY');
                        //    headerView += `<th colspan="3" style="min-width:100px;">${date}</th>`;
                        //    shiftView += `<th style="min-width:75px;">Shift 1</th><th style="min-width:75px;">Shift 2</th><th style="min-width:75px;">Shift 3</th>`;
                        //}
                        for (let i = 0; i < result.Waste.length; i++) {
                            rowView += `
                                <tr>
                                    <td>${result.Waste[i].Week}</td>
                                    <td>${result.Waste[i].Year}</td>
                                    <td>${result.Waste[i].Area}</td>
                                    <td>${result.Waste[i].Waste}</td>
                                    <td>${result.Waste[i].WasteType}</td>
                                `;
                            ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'].forEach(function (v, vi) {
                                for (let j = 1; j <= 3; j++) {
                                    for (let k = 0; k < result.Waste[i].WasteDetail.length; k++) {
                                        if (v == result.Waste[i].WasteDetail[k].Date && result.Waste[i].WasteDetail[k].Shift == j) {
                                            rowView += `<td>${result.Waste[i].WasteDetail[k].Value}</td>`;
                                            break;
                                        } else if (k == result.Waste[i].WasteDetail.length - 1) {
                                            rowView += `<td>-</td>`;
                                        }
                                    }
                                }
                            });
                            
                            var totalVal = toFloat(result.Waste[i].Total);
                            rowView += `<td>${parseFloat(totalVal).toFixed(1)}</td></tr>`;
                        }
                        //$("#waste-date-start").nextUntil("#waste-date-end").remove();
                        //$(headerView).insertAfter("#waste-date-start");
                        //$("#waste-shift-area").html(shiftView);
                        $("#PPwaste").html(rowView);
                        WasteTableData = result.Waste;
                        $('#loading_overlay').addClass('d-none');
                    },
                    complete: function () {
                        $('#loading_overlay').addClass('d-none');
                    },
                });
                //const prodCenter = $("[name=prodCenter]").val();
