@model Fast.Web.Models.EmployeeOvertimeModel
@using Fast.Web.Resources;

@using (Html.BeginForm("Edit", "EmployeeOvertime", FormMethod.Post, new { @class = "form-horizontal", @id = "ModalForm" }))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(x => x.ID, new { @Id = "ID" })
	@Html.HiddenFor(x => x.StartDate, new { @Id = "StartDate" })
	@Html.HiddenFor(x => x.EndDate, new { @Id = "EndDate" })
	<div class="modal-header pd-y-20 pd-x-20 pd-sm-x-50">
		<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</a>
		<div class="media align-items-center">
			<span class="tx-color-03 d-none d-sm-block"><i class="fa fa-edit" style="font-size:48px;"></i></span>
			<div class="media-body mg-sm-l-20">
				<h4 class="tx-18 tx-sm-20 mg-b-2">@UIResources.EditEmployeeOvertime</h4>
				<p class="tx-13 tx-color-03 mg-b-0">@UIResources.FillAllRequiredFields</p>
			</div>
		</div><!-- media -->
	</div><!-- modal-header -->

	<div class="modal-body pd-sm-t-20 pd-sm-b-20 pd-sm-x-30">
		<div class="row row-sm mg-b-10">
			<div class="col-sm-6">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.EmployeeID</label>
				@Html.TextBoxFor(x => x.EmployeeID, null, new { @class = "form-control", @id = "tbEmpID", @readonly = true })
			</div>
			<div class="col-sm-6">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.FullName</label>
				@Html.TextBoxFor(x => x.FullName, null, new { @class = "form-control", @id = "tbFullName", @readonly = true })
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-sm-6">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.PositionDesc</label>
				@Html.TextBoxFor(p => p.PositionDesc, null, new { @class = "form-control", @id = "tbPosDesc", @readonly = true })
			</div>
			<div class="col-sm-6">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.DepartmentDesc</label>
				@Html.TextBoxFor(x => x.DepartmentDesc, null, new { @class = "form-control", @id = "tbDepDesc", @readonly = true })
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-sm-6">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Date</label>
				@Html.TextBoxFor(x => x.Date, "{0:dd-MMM-yy}", new { @class = "form-control", @id = "tbDate", @readonly = true })
			</div>
			<div class="col-sm-6">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.Category</label>
				@Html.DropDownListFor(x => x.OvertimeCategory, (IEnumerable<SelectListItem>)ViewBag.OvertimeCategoryList, new { @class = "form-control", @id = "tbCategory" })
			</div>
		</div>
	</div><!-- modal-body -->

	<div class="modal-footer pd-x-20 pd-y-15">
		<button type="button" class="btn btn-white" data-dismiss="modal">@UIResources.Cancel</button>
		<button type="submit" class="btn btn-primary">@UIResources.Save</button>
	</div>
}