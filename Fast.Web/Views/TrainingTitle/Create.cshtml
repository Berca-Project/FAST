@model Fast.Web.Models.TrainingTitleMachineTypeModel
@using Fast.Web.Resources;

<link href="~/Content/dashforge/lib/fontawesome-free/css/all.min.css" rel="stylesheet">
<link href="~/Content/theme/css/jquery-ui-1.9.2.css" rel="stylesheet" />

<style>
	.fixedHeight {
		font-size: 14px;
		max-height: 300px;
		margin-bottom: 10px;
		overflow-x: hidden;
		overflow-y: auto;
	}

	.ui-helper-hidden-accessible {
		display: none;
	}

	.select2-container--default .select2-selection--multiple .select2-selection__choice {
		color: white;
	}

	.select2-container--default .select2-selection--multiple .select2-selection__choice__remove {
		color: red;
	}
</style>

@using (Html.BeginForm("Create", "TrainingTitle", FormMethod.Post, new { @class = "form-horizontal", @id = "ModalForm", @style = "min-width:600px;" }))
{
	@Html.AntiForgeryToken()
	<div class="modal-header pd-y-20 pd-x-20 pd-sm-x-30">
		<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</a>
		<div class="media align-items-center">
			<span class="tx-color-03 d-none d-sm-block"><i class="fa fa-plus-square" style="font-size:48px;"></i></span>
			<div class="media-body mg-sm-l-20">
				<h4 class="tx-18 tx-sm-20 mg-b-2">@UIResources.AddNewTrainingMachineType</h4>
				<p class="tx-13 tx-color-03 mg-b-0">@UIResources.FillAllRequiredFields</p>
			</div>
		</div><!-- media -->
	</div><!-- modal-header -->
	<div class="modal-body pd-sm-t-20 pd-sm-b-20 pd-sm-x-30">
		<div class="row row-sm mg-b-10">
			<div class="col-3">
				<label class="tx-10 tx-uppercase tx-medium tx-spacing-1 mg-b-5 tx-color-03">@UIResources.TrainingTitle</label>
			</div>
			<div class="col-9">
				@Html.TextBoxFor(x => x.TrainingTitle, null, new { @class = "form-control", @id = "tbTrainingTitle", @placeholder = "Type training title here...", @onkeypress="return blockSpecialChar(event)" })
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-3" style="display:none">
				@Html.TextBoxFor(x => x.TrainingTitleID, null, new { @class = "form-control", @id = "tbTrainingTitleID" })
			</div>
			<div class="col-9">
				<p id="empty-message"></p>
			</div>
		</div>
		<div class="row row-sm mg-b-10">
			<div class="col-3">
				<label class="col-form-label mg-b-5 tx-color-03">@UIResources.MachineTypeList</label>
			</div>
			<div class="col-9">
				@Html.DropDownListFor(x => x.MachineTypeIDs, (MultiSelectList)ViewBag.MachineTypeList, new { @multiple = "multiple", @class = "form-control", @id = "ddlMachineType", @style = "width: 100%" })
			</div>
		</div>
	</div><!-- modal-body -->
	<div class="modal-footer pd-x-20 pd-y-15">
		<button type="button" class="btn btn-white" data-dismiss="modal">@UIResources.Cancel</button>
		<button type="submit" class="btn btn-primary">@UIResources.Save</button>
	</div>
}

<script src="~/Content/theme/js/jquery-1.10.0.min.js"></script>
<script src="~/Content/theme/js/jquery-ui-1.9.2.min.js"></script>
<script src="~/Content/dashforge/lib/select2/js/select2.min.js"></script>

<script type="text/javascript">
	$(document).ready(function () {
		$('#ddlMachineType').select2({
			dropdownParent: $('#modalAddTrainingTitle')
		});

		$("#empty-message").text("");

		$("#tbTrainingTitle").autocomplete({
			delay: 750,
			source: function (request, response) {
				$.ajax({
					url: fastApp.BaseUrl + '/TrainingTitle/AutoComplete/',
					data: "{ 'prefix': '" + request.term + "'}",
					dataType: "json",
					type: "POST",
					contentType: "application/json; charset=utf-8",
					success: function (data) {
						if (data.length == 0) {
							$("#empty-message").css('color', 'red');
							$("#empty-message").text("Data does not exist in Training List or already defined");
						} else {
							$("#empty-message").text("");
							response($.map(data, function (item) {
								return $.trim(item.ID) + " - " + item.Title;
							}))
						}
					},
					error: function (response) {
						alert(response.responseText);
					},
					failure: function (response) {
						alert(response.responseText);
					}
				});
			},
			select: function (e, i) {
				var res = i.item.label.split(" - ");
				if (res[0]) {
					$("#tbTrainingTitleID").val(res[0]);
				}
			},
			minLength: 1
		});

		$("#tbTrainingTitle").autocomplete("widget").addClass("fixedHeight");

		$('#tbTrainingTitle').keyup(function () {
			if ($("#tbTrainingTitle").val() == '') {
				$("#empty-message").text("");
			}
		});

		var stack_bottomright = { "dir1": "up", "dir2": "left", "firstpos1": 15, "firstpos2": 15 };

		var result = "@ViewBag.Result";
		var error = "@ViewBag.ErrorMessage";

		if (result != "") {
			if (result == "True") {
				var notice = new PNotify({
					title: "@UIResources.Confirmation",
					text: "@UIResources.CreateSucceed",
					width: "400px",
					type: 'success',
					addclass: 'stack-bottomright',
					stack: stack_bottomright
				});

				notice.get().click(function () {
					notice.remove();
				});
			}
			else {
				if (error == "") {
					var notice = new PNotify({
						title: "@UIResources.ErrorMessage",
						text: "@UIResources.CreateFailed",
						width: "400px",
						type: 'error',
						hide: false,
						addclass: 'stack-bottomright',
						buttons: {
							sticker: false
						}
					});

					notice.get().click(function () {
						notice.remove();
					});
				}
				else {
					var notice = new PNotify({
						title: "@UIResources.ErrorMessage",
						text: error,
						width: "400px",
						type: 'error',
						hide: false,
						addclass: 'stack-bottomright',
						buttons: {
							sticker: false
						}
					});

					notice.get().click(function () {
						notice.remove();
					});
				}
			}
		}
	});
</script>


